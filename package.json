{
  "name": "grammar-proofreading-extension",
  "displayName": "Grammar Proofreading Extension",
  "description": "A VSCode extension that provides grammar correction and proofreading capabilities using Large Language Models",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/grammar-proofreading-extension"
  },
  "bugs": {
    "url": "https://github.com/your-username/grammar-proofreading-extension/issues"
  },
  "keywords": [
    "grammar",
    "proofreading",
    "writing",
    "ai",
    "llm",
    "openai",
    "correction",
    "style"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onCommand:grammarProofreading.correctGrammar",
    "onCommand:grammarProofreading.correctStyle",
    "onCommand:grammarProofreading.correctClarity",
    "onCommand:grammarProofreading.correctTone",
    "onCommand:grammarProofreading.correctCustom"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "grammarProofreading.correctGrammar",
        "title": "Correct Grammar",
        "category": "Grammar Proofreading"
      },
      {
        "command": "grammarProofreading.correctStyle",
        "title": "Correct Style",
        "category": "Grammar Proofreading"
      },
      {
        "command": "grammarProofreading.correctClarity",
        "title": "Correct Clarity",
        "category": "Grammar Proofreading"
      },
      {
        "command": "grammarProofreading.correctTone",
        "title": "Correct Tone",
        "category": "Grammar Proofreading"
      },
      {
        "command": "grammarProofreading.correctCustom",
        "title": "Custom Correction",
        "category": "Grammar Proofreading"
      },
      {
        "command": "grammarProofreading.openSettings",
        "title": "Open Settings",
        "category": "Grammar Proofreading"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "grammarProofreading.correctGrammar",
          "group": "grammarProofreading",
          "when": "editorTextFocus"
        },
        {
          "command": "grammarProofreading.correctStyle",
          "group": "grammarProofreading",
          "when": "editorTextFocus"
        },
        {
          "command": "grammarProofreading.correctClarity",
          "group": "grammarProofreading",
          "when": "editorTextFocus"
        },
        {
          "command": "grammarProofreading.correctTone",
          "group": "grammarProofreading",
          "when": "editorTextFocus"
        },
        {
          "command": "grammarProofreading.correctCustom",
          "group": "grammarProofreading",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "Grammar Proofreading",
      "properties": {
        "grammarProofreading.apiEndpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "OpenAI-compatible API endpoint"
        },
        "grammarProofreading.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for authentication"
        },
        "grammarProofreading.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "Model to use for corrections"
        },
        "grammarProofreading.maxTokens": {
          "type": "number",
          "default": 1000,
          "description": "Maximum tokens for API responses"
        },
        "grammarProofreading.temperature": {
          "type": "number",
          "default": 0.3,
          "description": "Temperature for API requests"
        },
        "grammarProofreading.customPrompts": {
          "type": "array",
          "default": [],
          "description": "Custom name-prompt pairs for grammar correction. Create your own correction types with custom prompts.",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the name-prompt pair"
              },
              "name": {
                "type": "string",
                "description": "Display name for the correction button (max 50 characters)",
                "maxLength": 50
              },
              "prompt": {
                "type": "string",
                "description": "The prompt text to send to the LLM (10-2000 characters)",
                "minLength": 10,
                "maxLength": 2000
              },
              "description": {
                "type": "string",
                "description": "Optional description of what this correction type does"
              },
              "createdAt": {
                "type": "string",
                "format": "date-time",
                "description": "When this name-prompt pair was created"
              },
              "updatedAt": {
                "type": "string",
                "format": "date-time",
                "description": "When this name-prompt pair was last updated"
              }
            },
            "required": ["id", "name", "prompt", "createdAt", "updatedAt"],
            "additionalProperties": false
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.28.0",
    "fast-check": "^3.8.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "node-fetch": "^3.3.2"
  }
}
