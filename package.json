{
  "name": "grammar-proofreading-extension",
  "displayName": "Grammar Proofreading Extension",
  "description": "AI-powered text correction with custom prompts",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "grammarProofreading.openSettings",
        "title": "Open Settings",
        "category": "Grammar Proofreading"
      },
      {
        "command": "grammarProofreading.refreshPrompts",
        "title": "Refresh Prompts",
        "category": "Grammar Proofreading"
      },
      {
        "command": "grammarProofreading.processFullDocument",
        "title": "Process Full Document",
        "category": "Grammar Proofreading"
      },
      {
        "command": "grammarProofreading.showChatWidget",
        "title": "Show Chat Widget",
        "category": "Grammar Proofreading"
      },
      {
        "command": "grammarProofreading.clearChatHistory",
        "title": "Clear Chat History",
        "category": "Grammar Proofreading"
      },
      {
        "command": "grammarProofreading.showOutput",
        "title": "Show Output",
        "category": "Grammar Proofreading"
      },
      {
        "command": "grammarProofreading.clearOutput",
        "title": "Clear Output",
        "category": "Grammar Proofreading"
      },
      {
        "command": "grammarProofreading.showStatistics",
        "title": "Show Statistics",
        "category": "Grammar Proofreading"
      },
      {
        "command": "grammarProofreading.testApiConnection",
        "title": "Test API Connection",
        "category": "Grammar Proofreading"
      },
      {
        "command": "grammarProofreading.changeChatWidgetPosition",
        "title": "Change Chat Widget Position",
        "category": "Grammar Proofreading"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "grammarProofreading.submenu",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ],
      "grammarProofreading.submenu": []
    },
    "submenus": [
      {
        "id": "grammarProofreading.submenu",
        "label": "Grammar Proofreading"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "grammarProofreading.panel",
          "title": "Grammar Proofreading",
          "icon": "$(pencil)"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "grammarProofreading.chatWidget",
          "name": "Grammar Proofreading Chat",
          "when": "config.grammarProofreading.chatWidgetPosition == 'explorer'"
        }
      ],
      "scm": [
        {
          "type": "webview",
          "id": "grammarProofreading.chatWidget",
          "name": "Grammar Proofreading Chat",
          "when": "config.grammarProofreading.chatWidgetPosition == 'scm'"
        }
      ],
      "debug": [
        {
          "type": "webview",
          "id": "grammarProofreading.chatWidget",
          "name": "Grammar Proofreading Chat",
          "when": "config.grammarProofreading.chatWidgetPosition == 'debug'"
        }
      ],
      "extensions": [
        {
          "type": "webview",
          "id": "grammarProofreading.chatWidget",
          "name": "Grammar Proofreading Chat",
          "when": "config.grammarProofreading.chatWidgetPosition == 'extensions'"
        }
      ],
      "grammarProofreading.panel": [
        {
          "type": "webview",
          "id": "grammarProofreading.chatWidget",
          "name": "Grammar Proofreading Chat",
          "when": "config.grammarProofreading.chatWidgetPosition == 'panel'"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "grammarProofreading.chatWidget",
        "contents": "Welcome to Grammar Proofreading!\n\nSelect text in your editor and use the prompt buttons to correct it.\n\n[Open Settings](command:grammarProofreading.openSettings)"
      }
    ],
    "configuration": {
      "title": "Grammar Proofreading",
      "properties": {
        "grammarProofreading.sharedPrompt": {
          "type": "string",
          "default": "",
          "description": "Shared prompt text appended to all custom prompts"
        },
        "grammarProofreading.apiEndpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "LLM API endpoint URL"
        },
        "grammarProofreading.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for LLM service"
        },
        "grammarProofreading.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "LLM model to use"
        },
        "grammarProofreading.chatWidgetPosition": {
          "type": "string",
          "enum": ["explorer", "scm", "debug", "extensions", "panel"],
          "enumDescriptions": [
            "Show in Explorer sidebar",
            "Show in Source Control sidebar", 
            "Show in Debug sidebar",
            "Show in Extensions sidebar",
            "Show in bottom Panel"
          ],
          "default": "explorer",
          "description": "Choose where to display the Grammar Proofreading chat widget"
        },
        "grammarProofreading.customPrompts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the prompt"
              },
              "content": {
                "type": "string",
                "description": "Content of the prompt"
              }
            },
            "required": ["name", "content"]
          },
          "default": [
            {
              "name": "Grammar Correction",
              "content": "Please correct any grammar, spelling, and punctuation errors in the following text while preserving its original meaning and style."
            },
            {
              "name": "Logic Reorganization", 
              "content": "Please reorganize the following text to improve its logical flow and clarity while maintaining all the original information."
            },
            {
              "name": "Tense Consistency",
              "content": "Please review and correct the tense consistency in the following text, ensuring all verbs are in the appropriate tense throughout."
            }
          ],
          "description": "Custom prompts for text correction. Each prompt should have a name and content."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "fast-check": "^3.5.0",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "uuid": "^13.0.0"
  }
}
